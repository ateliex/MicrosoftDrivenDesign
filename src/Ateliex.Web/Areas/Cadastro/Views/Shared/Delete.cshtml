@model Ateliex.Data.Entity

@{
    var info = Model.GetInfo();

    ViewData["Title"] = $"Excluir {Model.Id} - {info.SingleName}";

    var parent = (string?)ViewData["Parent"];
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Cadastro" asp-controller="Home" asp-action="Index">Cadastro</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">@info.SingleName</a></li>
        <li class="breadcrumb-item active" aria-current="page">Excluir @Model.Id</li>
    </ol>
</nav>

<section>
    <h1>Excluir @info.SingleName?</h1>

    <form asp-action="Delete" class="container">
        @*<h5>@info.SingleName @Model.Id</h5>*@
        
        <div asp-validation-summary="All" class="text-danger"></div>

        <partial name="Item/_@Model.GetTypeName()" model="Model" />

        <input type="hidden" asp-for="@parent" />

        <input type="hidden" asp-for="Id" />

        <p>
            <button type="submit" class="btn btn-danger"><i class="bi bi-exclamation-triangle"></i>Confirmar Exclusão</button>
        </p>
    </form>
</section>